{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "NSK Utility",
    "version": "0.9.9"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "scope": ["$RESOURCE/**", "**"]
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "window": {
        "all": true,
        "minimize": true,
        "maximize": true,
        "unmaximize": true,
        "close": true,
        "setPosition": true,
        "startDragging": true
      }
    },
    "windows": [
      {
        "title": "NSK Utility",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.nsk.utility",
      "icon": [
        "icons/fav32x32.ico",
        "icons/fav128x128.ico",
        "icons/fav64x64.ico"
      ],
      "publisher": "NSK International Software",
      "copyright": "copyballs ^C 2025 NSK International Software",
      "shortDescription": "A Time Tracker, Notepad, and Stopwatch",
      "longDescription": "A utility suite for tracking time, taking notes, and timing tasks, all working together with a markdown inspired interface.",
      "windows": {
        "nsis": {
          "installMode": "currentUser",
          "installerIcon": "icons/fav128x128.ico"
        }
      }
    }
  }
}
